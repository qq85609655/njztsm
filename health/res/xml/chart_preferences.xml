<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="功能设置" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="chart_checkup"
            android:layout="@layout/preference"
            android:summary="启动程序时检查版本更新"
            android:title="启动检查更新" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="chart_scroll"
            android:layout="@layout/preference"
            android:summary="已关闭左右滑动"
            android:title="左右滑动" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="chart_loadimage"
            android:layout="@layout/preference"
            android:summary="页面加载图片 (默认在WIFI网络下加载图片)"
            android:title="加载图片" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="chart_voice"
            android:layout="@layout/preference"
            android:summary="已开启提示声音"
            android:title="提示声音" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="缓存设置" >
        <Preference
            android:key="chart_cache"
            android:layout="@layout/preference"
            android:summary="0KB"
            android:title="清除缓存" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="其他" >
        <Preference
            android:key="chart_update"
            android:layout="@layout/preference"
            android:summary="检测是否有新版本"
            android:title="新版本检测" />
        <Preference
            android:key="chart_about"
            android:layout="@layout/preference"
            android:summary="关于我们、版权信息"
            android:title="关于我们" />
    </PreferenceCategory>

</PreferenceScreen>